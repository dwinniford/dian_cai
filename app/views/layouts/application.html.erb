<!DOCTYPE html>
<html>
  <head>
    <title>Big Belly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript">  
    </script>
  </head>

  <body>
    
    
    <main>

      <nav>
        <%= image_tag  "bb_logo_cropped.png", class: "logo" %>
        
        <div class="user-links">
          <button class="border-button">
            <%= link_to  "View Restuarants", restaurants_path %>
          </button>

          <% if session[:user_id] %>
            <% if current_user.image%>
              <div id="avatar">
                <img src="<%= current_user.image %>" alt="User Avatar">
              </div>
            <% end %>
           
              <button class="border-button">
                <%= link_to  "Logged in as: #{current_user.name}", user_path(current_user) %>
              </button>
            
            
              <button class="border-button">
                <%= link_to  "Logout", sessions_path, method: "delete" %>
              </button>
            
          <% else %>
              
                <button class="border-button">
                  <%= link_to  "Login", login_path %>
                </button>
                <button class="border-button">
                  <%= link_to  "Signup", new_user_path  %>
                </button>
              
          <% end %>
        </div>
      </nav>

      <div class="alert"> <%= alert %> </div>
      <div id="notice"><%= notice %></div>
      <%= yield %>
    </main>
  </body>
</html>
