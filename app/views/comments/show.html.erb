<h1>Comment on: <%= link_to @comment.translation.title, translation_path(@comment.translation) %></h1>
<div class="comment-content">
        <p> <%= @comment.title %>, from: <%= link_to @comment.user.name, user_path(@comment.user) %>, on: <%= @comment.created_at.strftime("%m/%d/%Y") %> </p>
        <p> <%= @comment.content %> </p>
        <p>Rating: <%= @comment.rating %> </p>
</div>
<% if user_has_permission?(@comment) %>
        <%= link_to  "Edit", edit_comment_path(@comment) %>
        <%= link_to  "Delete", comment_path(@comment), method: "delete", data: { confirm: 'Are you sure?' }  %>
<% end %>