
        <%= cloudinary_js_config %>

<%= form_with model: @restaurant, local: true do |f| %>

<% if @restaurant.errors.any? %>
    <div id="error_explanation">
       <ul>
            <% @restaurant.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>

<% end %>

    <h3>Name:</h3>
    <%= f.label :chinese_name %>
    <%= f.text_field :chinese_name %><br>
    <%= f.label :pinyin_name %>
    <%= f.text_field :pinyin_name %> <br>
    <%= f.label :translated_name %>
    <%= f.text_field :translated_name %> <br>
    <h3>Cuisine</h3>
    <%=f.collection_check_boxes(:cuisine_ids, Cuisine.all, :id, :english_name) %>
    <h3>Address:</h3>
    <%= f.label :country %>
    <%= f.text_field :country %> <br>
    <%= f.label :province %>
    <%= f.text_field :province %> <br>
    <%= f.label :city %>
    <%= f.text_field :city %> <br>
    <%= f.label :district %>
    <%= f.text_field :district %> <br>
    <%= f.label :street %>
    <%= f.text_field :street %> <br>
    <%= f.label :menu_image, "Add a picture of the menu" %> <br>
    <%= f.file_field :menu_image %>
    <br>
    <%= f.label :restaurant_image, "Add a picture of the restaurant front door/sign to help people find it"%> <br>
    <%= f.file_field :restaurant_image %>
    <br>
    <%= f.submit %>
<% end %>