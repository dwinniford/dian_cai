    <%= f.label :translated_name %>
    <%= f.text_field :translated_name %> <br>
    <p>(Add checkboxes for cuisine)</p>
    <h3>Address:</h3>
    <%= f.label :country %>
    <%= f.text_field :country %> <br>
    <%= f.label :province %>
    <%= f.text_field :province %> <br>
    <%= f.label :city %>
    <%= f.text_field :city %> <br>
    <%= f.label :district %>
    <%= f.text_field :district %> <br>
    <%= f.label :street %>
    <%= f.text_field :street %> <br>
    
    <%= f.submit %>
<% end %>