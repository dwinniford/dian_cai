
<h1>Create a new restaurant profile:</h1>

<%= form_with model: @restaurant, local: true do |f| %>

<% if @restaurant.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this article from being saved:</h2>
    
        <ul>
            <% @restaurant.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>

<% end %>

    <h3>Name:</h3>
    <%= f.label :chinese_name %>
