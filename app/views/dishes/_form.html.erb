<%= form_with( model: [@translation, @dish] , local: true) do |f| %>
    
    <% if @dish.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% @dish.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.hidden_field(:restaurant_id, value: @translation.restaurant_id) if @translation %>
    <%= f.label :chinese_name %>
    <%= f.text_field :chinese_name %><br>
    <%= f.label :pinyin_name %>
    <%= f.text_field :pinyin_name %> <br>
    <%= f.label :translated_name %>
    <%= f.text_field :translated_name %> <br>
    <%= f.label :description %>
    <%= f.text_area :description %> <br>
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %> <br>
    <%= f.label :spicy_level %>
    <%= f.number_field(:spicy_level, in: 1.0..5.0, step: 0.5) %> <br>
    <%= f.label :price %>
    <%= f.number_field(:price, in: 1..300, step: 1) %> <br>
    <%= f.label :image, "Add a picture"%> <br>
    <%= f.file_field :image %>
    <br>
    <%= f.submit %>
<% end %>